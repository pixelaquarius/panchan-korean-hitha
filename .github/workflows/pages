name: Deploy Jekyll with GitHub Pages dependencies preinstalled

on:
  push:
    branches: ["main"]
  workflow_dispatch:

permissions:
  contents: read
  pages: write
  id-token: write

concurrency:
  group: "pages"
  cancel-in-progress: false

jobs:
  build:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout
        uses: actions/checkout@v4
      
      # Bước 1: Cài đặt Ruby và cache Gem
      - name: Setup Ruby
        uses: ruby/setup-ruby@v1
        with:
          ruby-version: '3.2' # Nên dùng bản 3.2 để tránh lỗi tương thích của Vercel
          bundler-cache: true # Tự động chạy 'bundle install' và cache gem

      # Bước 2: Cấu hình GitHub Pages
      - name: Setup Pages
        id: pages
        uses: actions/configure-pages@v5
      
      # Bước 3: Build trang Jekyll bằng lệnh bundle exec
      - name: Build with Jekyll
        # Sử dụng lệnh build thủ công thay vì action jekyll-build-pages
        run: bundle exec jekyll build --source ./ --destination ./_site --baseurl ${{ steps.pages.outputs.base_path }}
      
      # Bước 4: Tải artifact lên
      - name: Upload artifact
        uses: actions/upload-pages-artifact@v3
        with:
          # Chỉ định đường dẫn tới thư mục _site đã build
          path: ./_site

  deploy:
    environment:
      name: github-pages
      url: ${{ steps.deployment.outputs.page_url }}
    runs-on: ubuntu-latest
    needs: build
    steps:
      - name: Deploy to GitHub Pages
        id: deployment
        uses: actions/deploy-pages@v4
